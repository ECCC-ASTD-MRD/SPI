namespace eval Limit {
   global   GDefs
   variable Data
   variable Param

   set Param(Title)   { "Limites" "Limits" }
   set Param(Version) 1.0
   set Param(Geom)    { 200x600+[winfo rootx .]+[winfo rooty .] } ;#Geometry
   set Param(Icon)    ARROWSQUARE
   set Param(Dock)    1                                           ;#Flag d'activation de l'outils

   set Data(Active) 0        ;#Flag d'activation de l'outils
   set Data(Canvas) ""       ;#Canvas Actif
   set Data(Frame)  ""       ;#Frame actif
   set Data(VP)     ""       ;#Viewport actif

   set Data(P0)   0          ;#Coordonnees des 4 coins en lat lon
   set Data(P1)   0
   set Data(P2)   0
   set Data(P3)   0

   set Data(PG0)   0         ;#Coordonnees des 4 coins en point de grille
   set Data(PG1)   0
   set Data(PG2)   0
   set Data(PG3)   0
}
