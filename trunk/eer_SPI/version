#----- Definitions
ARCH=`uname -s`
TCL_VERSION=8.4
SPI_VERSION=7.3.0
SPI_PATH=${DIR}
SHARED=${DIR}/Shared/${ARCH}

#----- Library locations
export SPI_VERSION
export SPI_PATH
export ARCH
export LD_LIBRARY_PATH=${SHARED}:${SHARED}/TclTk/lib:$LD_LIBRARY_PATH
export TCLLIBPATH="${SHARED} ${SHARED}/TclTk/lib ${SHARED}/TclTk/lib/tcl${TCL_VERSION} ${SHARED}/TclTk/lib/tk${TCL_VERSION} ${DIR}/Lib"
export TCL_LIBRARY="${SHARED}/TclTk/lib/tcl${TCL_VERSION}"

#----- GDAL data
export GDAL_DATA=${DIR}/Data/epsg_csv/

#----- Force BURP table dir since it's hardcoded with RMN and problem outside cmc
export MA_TABLEBURP_PERSONNELLE=${DIR}/Data/table_b_bufr

#----- Force GRIB Tables

export GRIB_TEMPLATE_PATH=/data/cmoe/afsr005/Lib/Linux/grib_api-0.9.31/share/grib_api/templates
