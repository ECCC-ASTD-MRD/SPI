set Graph::Grid(Dash)    ""

set Graph::Font(Select)    [font create -family courier -size -8   -weight bold]
set Graph::Font(Axis)      [font create -family courier -size -10  -weight bold]
set Graph::Font(Graph)     [font create -family courier -size -14  -weight bold]
set Graph::Font(Angle)     0

