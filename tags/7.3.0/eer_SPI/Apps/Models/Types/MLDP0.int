# Nom      : <MLDP0::Product>
# Creation : Septembre 2005 - J.P. Gauthier - CMC/CMOE
#
# But      : Lire les donnees et initialiser le produit
#
# Parametres  :
#    <Frame>  : Page
#    <Type>   : Type de donnees
#    <Layout> : Layout (produit)
#
# Retour :
#
# Remarques :
#
#----------------------------------------------------------------------------

proc MLDP0::CallProduct { Frame Type Layout } {

   foreach box [FieldBox::Get] {
      FieldBox::Close $box
   }
   foreach box [TrajBox::Get] {
      TrajBox::Close $box
   }
   MLDP0::Result $Type
   SPI::LayoutLoad $Frame $Layout
}

#----------------------------------------------------------------------------
# Nom        : <MLDP0::PopUp>
# Creation   : Aout 2001 - J.P. Gauthier - CMC/CMOE
#
# But        : Afficher le popup contextuel des simulations.
#
# Parametres :
#    <X>        : ...
#    <Y>        : ...
#
# Retour     :
#
# Remarques  :
#
#----------------------------------------------------------------------------

proc MLDP0::PopUp { X Y } {
   global   GDefs
   variable Sim
   variable Tmp
   variable Lbl

   if { ![winfo exists .mldp0popup] } {
      menu .mldp0popup -tearoff 0 -bd 1 -type normal -activeborderwidth 1
         .mldp0popup add command -label MLDP0 -background $GDefs(ColorHighLight) \
            -activebackground $GDefs(ColorHighLight)
         .mldp0popup add cascade -label [lindex $Lbl(Product) $GDefs(Lang)] -menu .mldp0popup.product
         .mldp0popup add cascade -label [lindex $Lbl(Result) $GDefs(Lang)] -menu .mldp0popup.res
         .mldp0popup add separator
         .mldp0popup add command -label [lindex $Lbl(Suppress) $GDefs(Lang)] \
             -command "MLDP0::SimSuppress True \$Exp::Data(SelectSim)"

      menu .mldp0popup.product -tearoff 0 -bd 1 -type normal -activeborderwidth 1
          .mldp0popup.product add command -label "VAAC" -command { MLDP0::CallProduct $Page::Data(Frame) result VAAC }
          .mldp0popup.product add command -label "RSMC" -command { MLDP0::CallProduct $Page::Data(Frame) all    RSMC }
          .mldp0popup.product add command -label "INFO" -command { MLDP0::CallProduct $Page::Data(Frame) result INFO }
          .mldp0popup.product add command -label "METF" -command { MLDP0::CallProduct $Page::Data(Frame) metf   METF }

      menu .mldp0popup.res -tearoff 0 -bd 1 -type normal -activeborderwidth 1
         .mldp0popup.res add command -label "All" -command "MLDP0::Result all"
         .mldp0popup.res add separator
         .mldp0popup.res add command -label "Dispersion" -command "MLDP0::Result result"
#         .mldp0popup.res add command -label "Post" -command "MLDP0::Result post"
#         .mldp0popup.res add command -label "MetField" -command "MLDP0::Result metf"
#         .mldp0popup.res add separator
         .mldp0popup.res add command -label "Meteo" -command "MLDP0::Result meteo"
   }

   Info::Decode ::MLDP0::Tmp $Sim(Info) $Exp::Data(SelectSim)

   #----- Verifier l'etat de la simulation et
   #      configurer le menu en consequence

   switch $Tmp(State) {

      0 {                                              #----- Continuable
         .mldp0popup entryconfigure 1 -state normal     ;#Product
         .mldp0popup entryconfigure 2 -state normal     ;#Data
         .mldp0popup entryconfigure 4 -state disabled   ;#Launch
         .mldp0popup entryconfigure 6 -state normal     ;#Suppress
      }
      1 {                                              #----- Etat Termine
         .mldp0popup entryconfigure 1 -state normal     ;#Product
         .mldp0popup entryconfigure 2 -state normal     ;#Data
         .mldp0popup entryconfigure 4 -state disabled   ;#Launch
         .mldp0popup entryconfigure 6 -state normal     ;#Suppress
      }
      2 {                                              #----- Etat d'execution
         .mldp0popup entryconfigure 1 -state disabled   ;#Product
         .mldp0popup entryconfigure 2 -state disabled   ;#Data
         .mldp0popup entryconfigure 4 -state disabled   ;#Launch
         .mldp0popup entryconfigure 6 -state normal     ;#Suppress
      }
      3 {                                              #----- Etat suspendu
         .mldp0popup entryconfigure 1 -state disabled   ;#Product
         .mldp0popup entryconfigure 2 -state disabled   ;#Data
         .mldp0popup entryconfigure 1 -state disabled   ;#Map
         .mldp0popup entryconfigure 4 -state normal     ;#Launch
         .mldp0popup entryconfigure 6 -state normal     ;#Suppress
      }
   }

   tk_popup .mldp0popup $X $Y 0
}

