   set hasFoundDuration 0
   for { set i 0 } { $i < $Sim(EmMaxInterval) } { incr i } {
      if { $Tmp(Duration$i) != "" } {
         set hasFoundDuration 1
         break
      }
   }

   set hasFoundRate 0
   for { set i 0 } { $i < $Sim(EmMaxInterval) } { incr i } {
      if { $Tmp(ReleaseRate$i) != "" } {
