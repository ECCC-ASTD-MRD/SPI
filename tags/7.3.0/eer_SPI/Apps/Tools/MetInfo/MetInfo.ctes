namespace eval MetInfo {
   global GDefs
   variable Data
   variable Param

   set Param(Title)   { "MET Information" "MET Information" }
   set Param(Version) 1.2
   set Param(Geom)    { +[winfo rootx .]+[winfo rooty .] }        ;#Geometry
   set Param(Dock)    False                                       ;#Docking

   set Data(Active)   0
   set Data(Station)  ""            ;# Station selectionnee
   set Data(File)     ""            ;# Date selectionnee
   set Data(Type)     "metar"       ;# Type de messages (metar par defaut)
   set Data(LType)    { radiosonde synop metar sa }  ;# Liste des type de messages disponibles
   set Data(Stat)     ""            ;# Message relatif aux stations
   set Data(Msg)      ""            ;# Message relatif aux messages

   set Data(Path)     ""            ;#Path courant

   set Data(BurpPath) "$GDefs(DirObs)/dbase/uprair/radiosonde  $GDefs(DirObs)/dbase/surface/synop $GDefs(DirObs)/dbase/surface/metar"
   set Data(RawPath)  "$GDefs(DirObs)/rawdata/uprair/radiosonde $GDefs(DirObs)/rawdata/surface/synop $GDefs(DirObs)/rawdata/surface/metar $GDefs(DirObs)/rawdata/surface/sa/"
   set Data(Extension) "prf sfc sfc"
}
