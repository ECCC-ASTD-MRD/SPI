#!/bin/ksh
export SPI_PATH=$(readlink -f $(dirname $(readlink -f $0))/..)
. ${SPI_PATH}/.profile_spi

SOFT=0
HARD=0
XVFB=0
XSVR=${XSVR:=99}
SPI_DEBUG=""
HOST=`hostname`

#----- Parse the flags fo batch token
for flag in $@
do
   if [[ $flag = "-batch" ]]
   then
      XVFB=1
      SOFT=1
   fi

   if [[ $flag = "-soft" ]]
   then
      SOFT=1
   fi

   if [[ $flag = "-hard" ]]
   then
      HARD=1
      SOFT=0
   fi

   if [[ $flag = "-valgrind" ]]
   then
      SPI_DEBUG="valgrind --track-origins=yes --leak-check=full"
   fi

   if [[ $flag = "-tclsh" ]]
   then
      ${SPI_DEBUG} ${SPI_LIB}/TclTk/bin/tclsh${TCL_VERSION} "${SPI_PATH}/tcl/SPI.tcl" $@
      code=$?
      exit $code
   fi
done

#----- Testing hardware capabilities
if [ \( $SOFT -eq 0 \) -a \( $HARD -eq 0 \) ]
then
   if [[ `glxinfo | grep -c "direct rendering: Yes"` -eq 0 ]]
   then
      SOFT=1
   fi
fi

#----- check for software mode
if [[ $SOFT -eq 1 ]]
then
   export LD_LIBRARY_PATH=${SPI_LIB}/GL/lib:${LD_LIBRARY_PATH}

   #----- this had to be forced on early Fedoras
#   export LD_PRELOAD=${SPI_LIB}/GL/lib/libGL.so
fi

#----- Load up the fonts
#xset fp default
#xset fp+ ${SPI_PATH}/share/font

#----- Let's start up the software
if [[ $XVFB -eq 1 ]]
then
   xvfb-run -w 1 -n $XSVR -a -s '-ac -screen 0 1x1x24' ${SPI_DEBUG} ${SPI_LIB}/TclTk/bin/wish${TCL_VERSION} "${SPI_PATH}/tcl/SPI.tcl" -- "$@"
   code=$?
else
   ${SPI_DEBUG} ${SPI_LIB}/TclTk/bin/wish${TCL_VERSION} "${SPI_PATH}/tcl/SPI.tcl" -- "$@"
   code=$?
fi

#----- Exit with SPI error code
exit $code